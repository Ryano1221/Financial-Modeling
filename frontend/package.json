{
  "name": "thecremodel-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check:app": "bash scripts/check-app-router.sh",
    "clean": "rm -rf .next",
    "dev": "next dev",
    "dev:clean": "rm -rf .next && next dev",
    "dev:report": "next dev -p 3001",
    "generate:example-report": "python3 scripts/generate_example_report_pdf.py",
    "build": "node scripts/verify-prod-env.js && next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "npx playwright test",
    "test:e2e:forbidden": "npx playwright test e2e/forbidden-strings.spec.ts",
    "smoke:prod": "node scripts/smoke-check-production.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "framer-motion": "^12.34.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.4"
  },
  "overrides": {
    "rimraf": "^5.0.0",
    "mkdirp": "^1.0.4",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "vitest": "^2.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.15",
    "sharp-ico": "^0.1.5",
    "typescript": "^5.6.0"
  }
}